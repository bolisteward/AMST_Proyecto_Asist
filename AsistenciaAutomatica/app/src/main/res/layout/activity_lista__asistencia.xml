<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1"
    android:orientation="vertical"
    tools:context=".Lista_Asistencia">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tituloAsist"
        android:textColor="@color/colorWhite"
        android:textAlignment="center"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:background="@drawable/borde_blanco"
            android:text="@string/nombre"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/TituloAsiste"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:background="@drawable/borde_blanco"
            android:text="@string/estado"
            android:textAlignment="center" />
        <TextView
            android:id="@+id/TituloHoraInicio"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:background="@drawable/borde_blanco"
            android:text="@string/hIni"
            android:textAlignment="center" />
        <TextView
            android:id="@+id/TituloHoraFin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:background="@drawable/borde_blanco"
            android:text="@string/numHoras"
            android:textAlignment="center" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <LinearLayout
                android:id="@+id/ContenedorNombre"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/borde_blanco"/>
            <LinearLayout
                android:id="@+id/ContenedorEstado"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/borde_blanco"/>
            <LinearLayout
                android:id="@+id/ContenedorHora"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/borde_blanco"/>
            <LinearLayout
                android:id="@+id/ContenedorCantHoras"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/borde_blanco"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>